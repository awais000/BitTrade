    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/stylesheet.css">


    <link href="https://transloadit.edgly.net/releases/uppy/v1.0.0/uppy.min.css" rel="stylesheet">
  

</head>
<style>
    .wrapper-outline {
        position: relative;
        z-index: -1;

    }

    .detail-from {


        min-width: 900px;
        padding: 20px;
        background-color: white;
    }
</style>

<body style="background-color:rgb(247, 247, 247);">

    <!--Body-->
    <header>
        <!--Responsive Navigation Bar-->
        <div class="shadow-sm" style="padding:5px 0px 5px 0px;background-color: rgb(255, 255, 255)">
            <div class="container" style="margin-top:10px;">
                <a class="navbar-brand" href="#" style="color:rgb(23, 216, 216)">
                    <div class="logo">B</div>
                    BitTrade
                </a>
            </div>
        </div>
    </header>
    <!-- Page Content -->

        <div class="custom-container">
            <h4 style="line-height:60px;color:rgb(99, 99, 126);">Create Your Listing</h4>

            <div class="detail-from">
                <div class="listing-detials">
                    <h5 style="margin:5px;">Listing Details</h5>
                    <hr>
                    <form action="/listitem" method="POST">
                            <div class="form-group row">
                              <label for="inputtile" class="col-sm-2 col-form-label">Title</label>
                              <div class="col-sm-10">
                                <input type="text" class="form-control" id="inputtitle" name="ad-title" placeholder="Enter Title">
                              </div>
                            </div>
                            <div class="form-group row">
                              <label for="inputsubtitle" class="col-sm-2 col-form-label" >Subtitle</label>
                              <div class="col-sm-10">
                                <input type="text" class="form-control" id="subtitle" placeholder="Enter Subtitle" name="ad-subtitle">
                              </div>
                            </div>
                            <fieldset class="form-group">
                              <div class="row">
                                <legend class="col-form-label col-sm-2 pt-0">Condition</legend>
                                <div class="col-sm-10">
                                  <div class="form-check">
                                    <input class="form-check-input" type="radio" name="conditon" id="gridRadios1" value="New" checked>
                                    <label class="form-check-label" for="gridRadios1">
                                      New
                                    </label>
                                  </div>
                                  <div class="form-check">
                                    <input class="form-check-input" type="radio" name="condition" id="gridRadios2" value="Used">
                                    <label class="form-check-label" for="gridRadios2">
                                      Used
                                    </label>
                                  </div>
                                  <div class="form-check disabled">
                                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3" disabled>
                                    <label class="form-check-label" for="gridRadios3">
                                     Third Option 
                                    </label>
                                  </div>
                                </div>
                              </div>
                            </fieldset>

                            

                            <div class="form-group row">
                              <div class="col-sm-2">Category</div>
                              <div class="col-sm-3">
                                <select class="custom-select" size="4" name="Category">
                                  <option selected>Open this select menu</option>
                                  <option value="1">One</option>
                                  <option value="2">Two</option>
                                  <option value="3">Three</option>
                                </select>
                              </div>

                              <div class="col-sm-3" hidden='true'>
                                <select class="custom-select" size="4" >
                                  <option selected>Open this select menu</option>
                                  <option value="1">One</option>
                                  <option value="2">Two</option>
                                  <option value="3">Three</option>
                                </select>
                              </div>
                            </div>








                            <div class="form-group row">

                                <div class="col-sm-2">Picture</div>

                                <div class="col-sm-10" id="pictures-uploader">


                                  <div id="drag-drop-area"></div>
                                 

                                </div>

                            </div>
                           







                            <div class="form-group row" >
                              <div class="col-sm-2">Checkbox</div>
                              <div class="col-sm-10">
                                <div class="form-check">
                                  <input class="form-check-input" type="checkbox" id="gridCheck1">
                                  <label class="form-check-label" for="gridCheck1">
                                    Example checkbox
                                  </label>
                                </div>
                              </div>
                            </div>

                            <div class="form-group row" >
                              <div class="col-sm-2">Description</div>
                              <div class="col-sm-10">
                                <textarea class="form-control" rows="5" id="comment" name="Description"></textarea>
                              </div>
                            </div>






                            <div class="form-group row">
                              
                              <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                              </div>
                            </div>
                          </form>
                 

                </div>



            </div>






            <!-- /.custom-container -->
        </div>
    
    <!-- Footer -->


    <!-- Bootstrap core JavaScript -->


    <!-- Bootstrap core JavaScript -->

    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://transloadit.edgly.net/releases/uppy/v1.0.0/uppy.min.js"></script>
    <script>
      var uppy = Uppy.Core()
        .use(Uppy.Dashboard, {
          inline: true,
          target: '#drag-drop-area'
        })
        .use(Uppy.Tus, {endpoint: 'https://master.tus.io/files/'})

      uppy.on('complete', (result) => {
        console.log('Upload complete! Weâ€™ve uploaded these files:', result.successful)
      })
    </script>


</body>

</html>